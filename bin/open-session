#! /usr/local/bin/python3

import os

from timedb import llm_utils

import click


@click.group()
def cli():
    pass


def main():

    @click.argument('prompt', type=click.STRING)
    @click.argument('service', default='chatgpt', type=click.STRING)
    @click.argument('model', default='4o', type=click.STRING)
    def llm(prompt, service, model):
        llm_utils.open_session(prompt, service, model)

    cli.command()(llm)

    cli(obj={})


if __name__ == "__main__":
    main()
